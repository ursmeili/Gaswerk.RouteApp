@using Gaswerk.RouteApp.Code
@model IEnumerable<Gaswerk.RouteApp.Models.Route>

<div class="container">
    <div class="row">
        <div class="col-2">Route Nr.</div>
        <div class="col-3">Name</div>
        <div class="col-3">Bewertung Routenbauer</div>
        <div class="col-4">Anzahl Kundenbewertungen</div>
    </div>
    @foreach (var m in Model.OrderBy(r => r.Name))
    {
        <div class="row">
            <div class="col-2">
                @m.Id
            </div>
            <div class="col-3">
                @m.Name
            </div>
            <div class="col-3">
                @(m.RoutenBauerBewertung?.Schwierigkeit.ToString())
            </div>
            <div class="col-4">
                @(m.KundenBewertungen?.Count() ?? 0) &nbsp;
                @Html.LinkButton(ButtonType.Success,"Jetzt bewerten",
                                 "BewertungsListe", 
                                 "Route",
                                 m.Id)
            </div>
        </div>
    }
</div>